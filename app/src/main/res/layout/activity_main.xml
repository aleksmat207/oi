<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colortlo"
    android:orientation="vertical"
    tools:context="com.example.am.oi.MainActivity">

<Space
    android:layout_width="match_parent"
    android:layout_height="90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:gravity="center_horizontal"
        android:text="Użytkowniku, witaj  serdecznie w aplikacji Pora na wodę! Czy wiesz, że zalecana ilość spożywanych płynów to ok. 3 litry dziennie? Jednak większość osób wypija zaledwie połowę z zalecanej ilości. Nasza aplikacja przypomni Ci o regularnym sięganiu po szklankę wody oraz pomoże utrzymać odpowiednie nawodnienie organizmu."
        android:textColor="@color/white" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Rozpocznij!"
        android:onClick="click"
        android:background="@color/blekit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />


</LinearLayout>
